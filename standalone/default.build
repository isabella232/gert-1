<?xml version="1.0"?>
<project name="standalone" default="rebuild">
    <target name="*">
        <nant target="${target::get-current-target()}">
            <buildfiles>
                <include name="**/*.build" />
                <!-- avoid recursive execution of current build file -->
                <exclude name="${project::get-buildfile-path()}" />
            </buildfiles>
        </nant>
    </target>
</project>

<project name="mcs-issue" default="rebuild">
	<target name="clean">
		<delete>
			<fileset>
				<include name="test.exe" />
			</fileset>
		</delete>
	</target>

	<target name="build">
		<csc target="exe" output="test.exe">
			<sources>
				<include name="test.cs" />
			</sources>
			<references>
				<include name="System.Drawing.dll" />
			</references>
		</csc>
		<exec program="test.exe" managed="true" />
	</target>

	<target name="rebuild" depends="clean, build" />
</project>

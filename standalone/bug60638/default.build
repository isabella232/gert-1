<project name="bug60638" default="rebuild">
	<include buildfile="../../build/common.build" />

	<property name="frameworks" value="mono-1.0,mono-2.0,net-1.1,net-2.0" />

	<target name="clean">
		<delete>
			<fileset>
				<include name="out" />
				<include name="test.exe" />
			</fileset>
		</delete>
	</target>

	<target name="run-test" depends="init">
		<record name="out" action="Start" />
		<csc target="exe" output="test.exe" define="${csc.defines}" warnaserror="true" warninglevel="4" failonerror="false">
			<sources>
				<include name="test.cs" />
			</sources>
		</csc>
		<record name="out" action="Close" />
		<fail if="${file::exists('test.exe')}">#1</fail>
		<loadfile file="out" property="out" />
		<fail unless="${string::index-of(out,'CS0252')!=-1}">#2</fail>
	</target>
</project>
